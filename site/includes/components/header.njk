<div id="sticky-nav" class="hidden md:sticky top-0 left-0 right-0 z-50 transition duration-500 ease-in-out">
	<div class="bg-homestart-orange flex text-white font-bold justify-self-end ">
		<ul class="flex list-style-none">
			{% for item in navigation.main %}
				<li class="px-4 py-4 ">
					<a href="{{ item.url }}" class="text-white text-base hover:text-homestart-purple">{{ item.label }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</div>
<header class="pt-4 relative">
	<div class="w-full flex justify-center">
		<div class="px-4 md:px-8 lg:px-32 pb-4 lg:pb-12">
			<img src="../../../images/logo/HomeStart_Logo_FullColour_CMYK.jpg" alt="Home Start Logo" class="w-full h-16 lg:h-auto">
		</div>
		<div class="hidden lg:flex flex-col w-full justify-between pt-4">
			<div class="flex justify-around items-start">
				<div class="flex flex-col flex-1">
					<div class="flex flex-col gap-4">
						<a class="decoration-none text-sm text-homestart-purple font-bold" href="mailto:homestartcravenmanager@gmail.com">homestartcravenmanager@gmail.com</a>
						<a class="decoration-none text-sm text-homestart-purple font-bold" href="tel:07585 232 014">07585 232 014</a>
						<a class="decoration-none text-sm text-homestart-purple font-bold" href="tel:07964 216 002">07964 216 002</a>
					</div>
				</div>
				<div id="social_links" class="flex justify-center xl:justify-start flex-1">
					<div class="h-8 w-8"><a class="facebook" href="{{ site.social_links.facebook }}" target="_blank"></a></div>
					<div class="h-8 w-8"><a class="instagram" href="{{ site.social_links.instagram }}" target="_blank"></a></div>
				</div>
				<div class="flex flex-1 gap-4">
					<a class="bg-get-help-yellow text-white px-2.5 py-2.5 font-bold" href="#contact">Get Help</a>
					<a class="bg-donate-pink text-white px-2.5 py-2.5 font-bold" href="#contact">Donate</a>
				</div>
			</div>
			<div class="">
				<div class="bg-homestart-orange flex text-white font-bold justify-self-end ">
					<ul class="flex list-style-none">
						{% for item in navigation.main %}
							<li class="px-4 py-4 ">
								<a href="{{ item.url }}" class="text-white text-base hover:text-homestart-purple">{{ item.label }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
			
		</div>
	</div>
</header>


<script>
	const stickyNav = document.getElementById('sticky-nav');

	stickyNav.style.display = 'none';
	stickyNav.style.opacity = 0;

	document.addEventListener('scroll', e => {
		
		if(window.pageYOffset > 200){
			stickyNav.style.display = 'block'
			stickyNav.style.opacity = 1;
		} else {
			stickyNav.style.opacity = 0;
			stickyNav.style.display = 'none';
		}
	})
	
</script>